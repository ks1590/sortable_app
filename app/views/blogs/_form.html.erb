<%# <div class="modal fade" id="blog-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"> %>
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with(model: @blog) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">新しい取引</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
          <div class="form-group">            
            <%= form.label :date %>
            <%= form.date_field :date, class: "form-control start_hidden" %>            
          </div>  
          <div class="form-group">
            <%= form.label :payment_id %>
            <%= form.collection_select :payment_id, Payment.all, :id, :name, {prompt: "選択してください"} %>
          </div>
          <div class="form-group">
            <%= form.label :category_id %>
            <%= form.collection_select :category_id, Category.all, :id, :name, {prompt: "選択してください"} %>
          </div>
          <div class="form-group">            
            <%= form.label :amount %>
            <%= form.text_field :amount, class: "form-control" %>            
          </div>        
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
            <%= form.submit "登録する", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<%# </div> %>


  <% if @blog.errors.any? %>
