<% if @status == 'success' %>
  $("#records").empty();
  $("#records").append("<%= j(render("li", blog: @blog)) %>");
  $("#calendar").fullCalendar(
  $.parseJSON("<%=j render(@event, format: :json).html_safe %>"),true);
<%  elsif @status == 'fail' %>
  alert('error!');
<% end %>
$("#blog-modal").modal("hide");